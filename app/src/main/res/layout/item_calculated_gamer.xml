<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/gallery"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Gamer Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp">

            <TextView
                android:id="@+id/tvGamerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/nero"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:id="@+id/tvGamerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/nero"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="홍길동" />

            <TextView
                android:id="@+id/tvGamerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="+10,000원"
                tools:textColor="@color/apple" />

        </LinearLayout>

        <!-- Options (Winner, Loser, Score) -->
        <TextView
            android:id="@+id/tvGamerOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="6dp"
            android:textColor="@color/dusty_gray"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="따당 / 박 / 쌍피"
            tools:visibility="visible" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@color/gallery" />

        <!-- Calculate Details -->
        <LinearLayout
            android:id="@+id/layoutCalculateDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">

            <!-- 동적으로 추가될 정산 내역 텍스트들 -->

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

