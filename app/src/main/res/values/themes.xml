<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. (다크모드 비활성화) -->
    <style name="Theme.GoStopCalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangey_red</item>
        <item name="colorPrimaryVariant">@color/orangey_red</item>
        <item name="colorOnPrimary">@color/orangey_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orangey_red</item>
        <item name="colorSecondaryVariant">@color/orangey_red</item>
        <item name="colorOnSecondary">@color/orangey_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 다크모드 강제 비활성화 -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Edge-to-edge 관련 설정 -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">default</item>
        <!-- Android 15+ Edge-to-edge 강제 비활성화 -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
