<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="zero.friends.gostopcalculator">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".GoStopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/song"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/song"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoStopCalculator">
        <activity
            android:name="zero.friends.gostopcalculator.ui.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="zero.friends.gostopcalculator.initailizer.TimberInitializer"
                android:value="androidx.startup" />
        </provider>

    </application>

</manifest>