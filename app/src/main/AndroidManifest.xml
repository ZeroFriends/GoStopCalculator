<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zero.friends.gostopcalculator">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".GoStopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/song"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/song"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoStopCalculator">
        <activity
            android:name="zero.friends.gostopcalculator.ui.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>